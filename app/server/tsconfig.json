{
    "extends": "@tsconfig/strictest",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@common/*": ["../common/src/*"],
            "@docs/*": ["../../documents/*"]
        },
        "composite": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "references": [{ "path": "../common" }]
}
