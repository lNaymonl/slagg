{
    "extends": "@tsconfig/strictest",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "../dist",
        "rootDir": "./",
        "paths": {
            "@common/*": ["../common/src/*"]
        },
        "composite": true,
        "resolveJsonModule": true,
        "allowArbitraryExtensions": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "src/**/*.d.ts"
    ],
    "references": [{ "path": "../common" }]
    // ,
    // "tsc-alias": {
    //     "outDir": "../dist"
    // }
}
